<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
  <div class="w-60" style="max-width: 500px;">
    <h2 class="text-center mb-4 display-5 fw-bold text-warning">RoastBot Sign Up</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-dark p-4 rounded-4 shadow-lg border border-secondary" }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs text-light">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control bg-secondary text-light border-0" }%>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "form-control bg-secondary text-light border-0" },
                    hint_html: { class: "text-muted" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "form-control bg-secondary text-light border-0" } %>
      </div>
      <div class="form-actions mt-4">
        <%= f.button :submit, "Sign up", class: "btn btn-warning w-100 fw-bold py-3" %>
      </div>
    <% end %>
    <div class="text-center mt-3">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
