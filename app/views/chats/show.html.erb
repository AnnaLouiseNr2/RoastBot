<div class="container">
  <div class="header">
    <h1>Roast History of <%= @person.name %></h1>
    <div class="actions">
      <%= link_to "Back to People", people_path %>
      <%= link_to "Home", root_path %>
    </div>
  </div>

  <div class="content">
    <% if @person.chats.any? %>
      <ul>
        <% @person.chats.each do |chat| %>
          <li>
            <%= link_to chat.name, person_chat_path(@person, chat) %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No chats found for this person. Start a new one!</p>
    <% end %>
  </div>

  <div class="footer">
    <%= link_to "Start a New Chat", new_person_chat_path(@person, @chat) %>
  </div>
</div>

<%= button_to "Delete", chat_path(@chat),
          method: :delete,
          data: { turbo_confirm: "Are you sure you want to delete this chat?" } %>
