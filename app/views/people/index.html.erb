<div class="hero-image d-flex align-items-center justify-content-center text-center text-white">
  <div class="hero-text p-4 rounded-3 shadow-lg">
    <h1 class="display-3 fw-bold">Serving Roasts Hotter Than Their PR Spin</h1>
    <p class="lead mt-3">Ready for some sharp wit? Check out the dedicated pages of public figures by clicking on their cards below. ðŸ‘‡</p>
    <%= simple_form_for @person do |f| %>
  <%= f.input :name %>
  <%= f.input :fun_facts, as: :text %>
  <%= f.input :image, as: :text, label: "Add Image URL (Optional)", input_html: { placeholder: "Give an image url (Optional)", style: "height: 30px;" }%>
<%= f.button :submit, "Create Roastee!", class: "btn btn-warning" %>
 <% end %>
  </div>
</div>

<div class="container my-5" id="roast-grid">
  <h2 class="text-center mb-5 display-5 fw-bold text-dark">Who's on the menu?</h2>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">


    <% all_figures = @people.map { |p| { name: p.name, image: p.image, path: person_path(p) } } %>

    <% all_figures.each do |figure| %>
      <div class="col">
        <div class="card h-100 border-0">
          <%= image_tag figure[:image], class: "card-img-top", alt: figure[:name] %>
          <div class="card-body d-flex flex-column text-center">
            <h5 class="card-title fw-bold"><%= figure[:name] %></h5>
            <%= link_to "Roast #{figure[:name].split.first}", figure[:path], class: "btn btn-warning mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>





<style>
  .hero-image {
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('<%= asset_path("hero_image.jpg") %>');
    background-size: cover;
    background-position: center;
    height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .

  .hero-text {
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(5px);
    border-radius: 10px;
  }

  .card-img-top {
    height: 250px;
    object-fit: cover;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
  }
</style>
