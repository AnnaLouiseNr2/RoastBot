<div class="hero-image d-flex align-items-center justify-content-center text-center text-white">
  <div class="hero-text p-4 rounded-3 shadow-lg">
    <h1 class="display-3 fw-bold">Serving Roasts Hotter Than Their PR Spin</h1>
    <p class="lead mt-3">Ready for some sharp wit? Check out the dedicated pages of public figures by clicking on their cards below. ðŸ‘‡</p>
    <div class="bg-dark bg-opacity-50 p-4 rounded-3 mt-4">
      <%= simple_form_for @person do |f| %>
        <div class="row g-3">
          <div class="col-md-4">
            <%= f.input :name, label: false, placeholder: "Name", input_html: { class: "form-control", style: "height: 38px;" } %>
          </div>
          <div class="col-md-4">
            <%= f.input :fun_facts, as: :string, label: false, placeholder: "Fun facts", input_html: { class: "form-control", style: "height: 38px;" } %>
          </div>
          <div class="col-md-4">
            <%= f.input :image, as: :string, label: false, placeholder: "Image URL (Optional)", input_html: { class: "form-control", style: "height: 38px;" } %>
          </div>
        </div>
        <div class="mt-3">
          <%= f.button :submit, "Create Roastee!", class: "btn btn-warning fw-bold px-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<div class="container my-5" id="roast-grid">
  <h2 class="text-center mb-5 display-5 fw-bold text-dark">Who's on the menu?</h2>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% @people.each do |p| %>
      <div class="col">
        <div class="card h-100 border-0">
          <%= image_tag(p.image.presence || asset_path("default.jpg"),
                        class: "card-img-top", alt: (p.name.presence || "Roastee")) %>
          <div class="card-body d-flex flex-column text-center">
            <h5 class="card-title fw-bold"><%= p.name %></h5>
            <%= link_to "Roast #{p.name.to_s.split.first}", person_path(p), class: "btn btn-warning mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<style>
  .hero-image {
    background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('<%= asset_path("hero_image.jpg") %>');
    background-size: cover;
    background-position: center;
    height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-text {
    background-color: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(5px);
    border-radius: 10px;
  }

  .card-img-top {
    height: 250px;
    object-fit: cover;
  }

  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
  }
</style>
